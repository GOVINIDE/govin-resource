{
  "name": "govin-resource",
  "version": "0.2.1",
  "description": "External resources for govin projects",
  "main": "index.js",
  "bin": {
    "gen-config": "./script/bin/gen-config.js",
    "upload-releaseInfo": "./script/bin/upload-latest-release-info.mjs",
    "upload-file": "./script/bin/upload-file.mjs",
    "i18n-extract": "./script/i18n/extract-format-message.js",
    "i18n-push": "./script/i18n/push-format-message.js",
    "i18n-update": "./script/i18n/update-translations.js",
    "arduino-staging": "script/bin/arduino-staging.js"
  },
  "scripts": {
    "build": "rimraf dist && npm run build:extension && npm run build:device",
    "build:device": "node script/generate-device-page.js --url=https://openblockcc.github.io/external-resources/",
    "build:extension": "node script/generate-extension-page.js --url=https://openblockcc.github.io/external-resources/",
    "clean": "rimraf external-resources dist translation download ../.govinData/external-resources",
    "deploy": "npm run fetch && npm run build",
    "ext:gen-config": "gen-config --dir=external-resources --repo=GOVINIDE/external-resources-v2",
    "ext:i18n-extract": "i18n-extract  --dir=external-resources",
    "ext:i18n-push": "i18n-push --dir=external-resources",
    "ext:i18n-update": "i18n-update --dir=external-resources",
    "ext:opt-size": "opt-size --dir=external-resources",
    "fetch": "rimraf external-resources download && node script/download.js --repo=GOVINIDE/external-resources-v2 --plat=github",
    "lint": "eslint ./",
    "start": "node ./test/start-server.js",
    "start:clear": "rimraf ../.govinData/external-resources && node ./test/start-server.js",
    "test:abort-check": "node test/abortCheckUpdate.js",
    "test:abort-update": "node test/abortUpdate.js",
    "test:cnUpdate": "node test/cnUpdate.js",
    "test:multi-init": "rimraf ../.govinData/external-resources && node test/multi-initial.js",
    "test:multi-server": "node test/multi-server.js",
    "test:multi-update": "node test/multi-update.js",
    "test:update": "node test/update.js"
  },
  "author": "ArthurZheng",
  "license": "MIT",
  "dependencies": {
    "cli-color": "^2.0.1",
    "compare-versions": "^3.6.0",
    "express": "^4.17.1",
    "extract-zip": "^2.0.1",
    "folder-hash": "^4.0.1",
    "format-message": "^6.2.3",
    "fs-extra": "^10.0.0",
    "hash-files": "^1.1.1",
    "lodash": "^4.17.21",
    "node-abort-controller": "^3.0.1",
    "node-fetch": "^2.6.7",
    "node-fetch-progress": "^1.0.2",
    "govin-parse-release-message": "^0.0.4",
    "proper-lockfile": "^4.1.2",
    "require-all": "^3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "copy-dir": "^1.3.0",
    "eslint": "^5.3.0",
    "eslint-config-scratch": "^5.0.0",
    "openblock-resource-cli": "^0.2.2",
    "progress": "^2.0.3",
    "rimraf": "^3.0.2",
    "transifex": "^1.6.6"
  }
}
